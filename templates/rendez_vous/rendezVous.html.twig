{% extends 'base.html.twig' %}

{% block title %}SoigneMoi - Bienvenue sur la page de rendez-vous{% endblock %}

{% block body %}

    <div class="container my-5">
    <h1>Bienvenue sur la page de rendez-vous</h1>
    <div class="row">
        <div class="col-md-3">
            {% include 'compte/_menu.html.twig' %}
        </div>
        <div class="col-md-9">
            <h2>Liste des rendez-vous</h2>

            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Patient</th>
                    <th>Médecin</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for rdv in rdvs %}
                    <tr>
                        <td>{{ rdv.date|date('d/m/Y') }} à {{ rdv.date|date('H:i') }}</td>
                        <td>{{ rdv.utilisateur.nom }} {{ rdv.utilisateur.prenom }}</td>
                        <td>{{ rdv.medecin }}</td>
                        <td>
                            <a href="{{ path('app_rendez-vous_modifier', {'id': rdv.id}) }}" class="btn btn-warning">Modifier</a>
                            <a href="{{ path('app_rendez-vous_supprimer', {'id': rdv.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}